<%= form_for( [@user, @team], html:{class: "form-horizontal", role: "form"}) do |f| %>
  <%= render partial: "shared/errors", locals: {instance: @team} %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class:"btn btn-primary" %>
      <%= link_to "Cancel", user_teams_path(current_user), class:"btn btn-default" %>
    </div>
  </div>
<% end %>
