<h1 class="page-header">Edit <%= current_user.username %></h1>

<%= form_for @user, html:{class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :username, class:"control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :username, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar_url, class:"control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :avatar_url, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class:"btn btn-success text-center" %>
    </div>
  </div>
<% end %>
